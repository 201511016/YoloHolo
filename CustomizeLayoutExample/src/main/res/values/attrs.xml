<resources>
	<declare-styleable name="ColorPickerPreference">
		<attr name="alphaSlider" format="boolean"/>
		<attr name="lightnessSlider" format="boolean"/>
		<attr name="density" format="integer"/>
		<attr name="initialColor" format="integer"/>
		<attr name="wheelType" format="enum">
			<enum name="FLOWER" value="0"/>
			<enum name="CIRCLE" value="1"/>
		</attr>
		<attr name="lightnessSliderView" format="reference"/>
		<attr name="alphaSliderView" format="reference"/>
		<attr name="pickerTitle" format="reference|string"/>
		<attr name="pickerButtonOk" format="reference|string"/>
		<attr name="pickerButtonCancel" format="reference|string"/>
	</declare-styleable>

	<declare-styleable name="SubsamplingScaleImageView">
		<attr name="src" format="reference"/>
		<attr name="assetName" format="string"/>
		<attr name="panEnabled" format="boolean"/>
		<attr name="zoomEnabled" format="boolean"/>
		<attr name="quickScaleEnabled" format="boolean"/>
		<attr name="tileBackgroundColor" format="color"/>
	</declare-styleable>

	<declare-styleable name="BorderRadius">
		<attr name="borderRadius" format="dimension"/>
	</declare-styleable>

	<declare-styleable name="RelativeBlurLayout">
		<attr name="blurRadius" format="dimension"/>
		<attr name="blurDownSample" format="integer"/>
		<attr name="blurSource" format="reference"/>
		<attr name="blurRootSource" format="boolean"/>
		<attr name="blurUpdateAtStart" format="boolean"/>
		<attr name="blurUpdateOnInvalidate" format="boolean"/>
	</declare-styleable>
</resources>